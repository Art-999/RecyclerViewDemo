<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView_ForCustomAdapter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/textView1_ForCustomAdapter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/imageView_ForCustomAdapter1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/imageView_ForCustomAdapter1"
        android:text="Title" />

    <TextView
        android:id="@+id/textView2_ForCustomAdapter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView_ForCustomAdapter1"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView1_ForCustomAdapter1"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/imageView_ForCustomAdapter1"
        android:text="Description" />
</RelativeLayout>